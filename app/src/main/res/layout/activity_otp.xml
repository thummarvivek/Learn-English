<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/OTP"
    tools:context=".userProcess.otp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:srcCompat="@drawable/otp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginLeft="25dp"
            android:text="Enter OTP" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/gray"
            android:text="An 4 digit code has been sent to" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/gray"
            android:text="+91Number" />

    </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/gray"
                android:maxLength="1"
                android:hint="0"
                android:textSize="30sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                tools:ignore="SpeakableTextPresentCheck"
                android:layout_marginRight="10dp"
                android:inputType="phone"/>
            <EditText
                android:id="@+id/editTextTextPassword1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/gray"
                android:maxLength="1"
                android:hint="0"
                android:textSize="30sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="phone"/>
            <EditText
                android:id="@+id/editTextTextPassword2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/gray"
                android:maxLength="1"
                android:hint="0"
                android:padding="10dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="phone"/>
            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/gray"
                android:maxLength="1"
                android:hint="0"
                android:textSize="30sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/editTextTextPassword4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/gray"
                android:maxLength="1"
                android:hint="0"
                android:textSize="30sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/editTextTextPassword5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="@color/gray"
                android:maxLength="1"
                android:hint="0"
                android:textSize="30sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="phone"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/otpbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/bluemaster"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="LOGIN" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>
        <TextView
            android:id="@+id/resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/bluemaster"
            android:text="Resend" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>