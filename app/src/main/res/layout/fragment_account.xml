<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightwhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:elevation="10dp"
        app:expanded="true"
        android:background="@drawable/shepe">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shepe"
            android:longClickable="true"
            app:titleMargin="10dp"
            app:titleTextColor="#F3F6FC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cu02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:fontFamily="@font/dancing_script"
                    android:paddingTop="5dp"
                    android:textStyle="bold"
                    android:text="Profile Details"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/scu002"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:textSize="22dp"
                    android:drawableRight="@drawable/baseline_menu"
                    android:textColor="@color/white"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swip"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize">



                <Space
                    android:id="@+id/spaceid"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileid"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/spaceid"
                    android:layout_centerHorizontal="true"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:background="@drawable/profilecircle"
                    app:cardCornerRadius="150dp"
                    android:layout_marginTop="-15dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/profile_dp"
                        android:id="@+id/profiledp"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilecard"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:elevation="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:backgroundTint="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/username001"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="Vivek Thummar"
                                android:fontFamily="sans-serif"
                                android:textStyle="italic"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/Bio005"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="Har_Har_Mahadev"
                                android:textStyle="italic"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:textColor="@color/black"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#32000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:id="@+id/editpofilebtn"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="20dp"
                                android:text="Edit Profile"
                                android:drawableLeft="@drawable/edit"
                                android:gravity="center"
                                android:textColor="@color/bluemaster"/>





                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/addresssid"
                    android:elevation="15sp"
                    android:layout_marginTop="180dp"
                    android:padding="20dp"
                    android:layout_below="@id/profileid"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#fff"
                    android:background="#000">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18dp"
                            android:layout_gravity="left"
                            android:drawablePadding="10dp"
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/home"
                            android:text="Address:-"/>




                        <TextView
                            android:id="@+id/address001"
                            android:layout_margin="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#C8001D35"
                            android:textSize="15sp"
                            android:text="Merriott sky, near Bhakti Circle, Nikol, Ahmedabad, Gujarat 382350" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/mobileid"
                    android:elevation="15sp"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:layout_below="@id/addresssid"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#fff">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="15dp"
                                android:textSize="18dp"
                                android:layout_gravity="left"
                                android:drawablePadding="10dp"
                                android:textColor="@color/black"
                                android:drawableLeft="@drawable/phone"
                                android:text="Mobile No"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:gravity="left"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="20dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="+91"/>
                                <TextView
                                    android:id="@+id/phoneno001"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:textSize="15sp"
                                    android:layout_marginBottom="20px"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="7265992856"/>
                            </LinearLayout>



                        </LinearLayout>




                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="15sp"
                    android:id="@+id/emaicart"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:layout_below="@id/mobileid"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="15dp"
                                android:textSize="18sp"
                                android:layout_gravity="left"
                                android:textColor="@color/black"
                                android:drawablePadding="10dp"
                                android:drawableLeft="@drawable/email"
                                android:text="Mail"/>


                            <TextView
                                android:id="@+id/email001"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:gravity="left"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/black"
                                android:text="vivekthummar90@gmail.com"/>
                        </LinearLayout>




                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:id="@+id/spaceid2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/emaicart"  />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>


</FrameLayout>